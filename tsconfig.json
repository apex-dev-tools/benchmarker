{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "transform": "./scripts/apexLoader.ts"
      }
    ],
  },
  "include": [
    "src",
    "test",
    "test_system"
  ]
}
