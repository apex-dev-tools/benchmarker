{
  "name": "@apexdevtools/benchmarker",
  "version": "1.0.0-beta.1",
  "description": "Benchmarks performance of processes on Salesforce Orgs",
  "author": {
    "name": "Apex Dev Tools Team",
    "email": "apexdevtools@gmail.com",
    "url": "https://github.com/apex-dev-tools"
  },
  "repository": "apex-dev-tools/benchmarker",
  "homepage": "https://github.com/apex-dev-tools/benchmarker",
  "main": "dist/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "files": [
    "dist/src",
    "dist/types/src",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run compile && npm run build:copy",
    "build:clean": "rm -rf dist",
    "build:copy": "copyfiles -u 1 src/**/*.cls dist/src",
    "compile": "tsc --skipLibCheck",
    "doc:generate": "typedoc --excludeNotExported --ignoreCompilerErrors --out doc src/**/*",
    "lint": "tslint src/**/*.ts",
    "postversion": "npm run doc:generate",
    "test": "DEBUG=-* nyc mocha 'test/**/*.test.ts'",
    "test:only": "DEBUG=-* nyc mocha",
    "test:system:init": "cp test_system/.env .env",
    "test:system": "mocha 'test_system/**/*.test.ts' --timeout 30000"
  },
  "dependencies": {
    "@jsforce/jsforce-node": "3.2.0",
    "@salesforce/core": "7.3.5",
    "axios": "1.6.8",
    "cli-table": "0.3.11",
    "dotenv": "16.4.5",
    "lodash": "4.17.21",
    "moment": "2.30.1",
    "pg": "8.11.5",
    "pg-connection-string": "2.6.4",
    "puppeteer": "22.8.0",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@fluffy-spoon/substitute": "1.208.0",
    "@types/chai": "4.3.16",
    "@types/chai-as-promised": "7.1.8",
    "@types/cli-table": "0.3.4",
    "@types/lodash": "4.17.1",
    "@types/mocha": "7.0.2",
    "@types/node": "20.12.11",
    "@types/sinon": "5.0.5",
    "@types/sinon-chai": "3.2.0",
    "axios-mock-adapter": "1.22.0",
    "chai": "4.4.1",
    "chai-as-promised": "7.1.1",
    "copyfiles": "2.4.1",
    "lighthouse": "12.0.0",
    "mocha": "10.4.0",
    "nyc": "15.1.0",
    "sinon": "17.0.2",
    "sinon-chai": "3.7.0",
    "source-map-support": "0.5.21",
    "ts-node": "10.9.2",
    "tslint": "6.1.3",
    "typedoc": "0.25.13",
    "typescript": "5.4.5"
  },
  "engines": {
    "node": ">18.0.0"
  },
  "nyc": {
    "branches": 80,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/shared/uiHelper.ts"
    ],
    "functions": 80,
    "include": [
      "src/shared/**/*.ts",
      "src/services/**/*.ts",
      "src/database/**/*.ts"
    ],
    "instrument": true,
    "lines": 80,
    "per-file": true,
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "statements": 80
  },
  "lint-staged": {
    "*.ts": "tslint --fix src/**/*.ts"
  }
}
