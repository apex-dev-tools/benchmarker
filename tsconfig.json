{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src",
    "test",
    "test_system"
  ],
}
